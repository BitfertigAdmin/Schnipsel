<?php

ini_set('memory_limit', '256M'); // Returns the old value on success, FALSE on failure. 
set_time_limit(3600);

if (1) { // 1 = Dev; 0 = Live
	// Zeigt zumindest Fehler in den Unterdateien (includes) an
	ini_set("display_errors", 1);
	ini_set('display_startup_errors', 1);
	error_reporting(E_ALL & ~E_STRICT & ~E_NOTICE);
}

ini_set('display_errors', 1);
ini_set('display_startup_errors', 1);
error_reporting(E_ALL);

?>
